#include "libPlaylist.h"

//** FUNCIONES CON PLAYLISTS////
void mostrarPlaylist (stUsuario u, stCancion canciones[], int valc)
{
    int i =0;
    stCancion c;

    for (i=0; i<u.cantidad; i++)
    {

        c=buscaCancionPorID(u.playlist[i]);
        muestraUnaCancion(c);
    }
}
